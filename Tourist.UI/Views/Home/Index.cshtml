
@model List<Tourist.UI.Models.Dto.TourDto>
<a asp-controller="Auth" asp-action="Register">Register</a> |
<a asp-controller="Auth" asp-action="Login">Login</a>

<h2 class="mt-3">لیست تورها</h2>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>مقصد</th>
            <th>قیمت</th>
            <th>تاریخ شروع</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Tour"  asp-route-id="@tour.Id">@tour.Destination</a>
                </td>
                <td>@tour.Description</td>
                <td>@tour.Price تومان</td>
                <td>@tour.StartDate.ToShortDateString()</td>

            </tr>
        }
    </tbody>
</table>

<a asp-controller="Bookings" asp-action="MyBookings">رزروهای من</a>
